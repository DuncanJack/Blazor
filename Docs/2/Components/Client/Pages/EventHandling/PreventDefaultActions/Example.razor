@page "/EventHandling/PreventDefaultActions"

<h3>Prevent Default Actions</h3>

<input type="text" value="@_count" @onkeypress:preventDefault />

<hr />

<input type="text" value="@_count" @onkeypress:preventDefault="true" />

<hr />

<input type="text" value="@_count" @onkeypress:preventDefault="@_preventDefault" />

<hr />

<input type="text" value="@_count" @onkeypress:preventDefault @onkeypress="KeyHandler"/>

@code {
    private int _count = 0;

    private bool _preventDefault = true;

    private void KeyHandler(KeyboardEventArgs e)
    {
        if (e.Key == "+")
        {
            _count++;
        }
    }
}
