@page "/EventHandling/LambdaExpressions"

<h3>Lambda Expressions</h3>

<button class="btn btn-sm btn-primary" @onclick="@(() => Console.WriteLine("Clicked"))">Click Me</button>

<p>@_message</p>

@for(var i = 1; i < 4; i++)
{
    // Capture the loop variable so we do NOT use it in the lambda.
    var buttonNumber = i;

    <button class="btn btn-sm btn-secondary" @onclick="@((e) => UpdateHeading(e, buttonNumber))">
        Button #@i
    </button>
}

@code {
    private string _message = "Select a button to learn its position";

    private void UpdateHeading(MouseEventArgs e, int buttonNumber)
    {
        _message = $"You clicked Button #{buttonNumber} at mouse position: ({e.ClientX}, {e.ClientY})";
    }
}
