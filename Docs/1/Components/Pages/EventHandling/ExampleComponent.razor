<button @onclick="@(e => Console.WriteLine("You clicked me!!"))">Lambda</button>

<h2>@message</h2>

@for (var i = 1; i < 4; i++)
{
    var buttonNumber = i;

    <button class="btn btn-primary" @onclick="@(e => UpdateHeading(e, buttonNumber))">Button @i</button>
}

@code
{
    private string message = "Select a button to learn its position.";

    private void UpdateHeading(MouseEventArgs e, int buttonNumber)
    {
        message = $"You selected Button {buttonNumber} at mouse position {e.ClientX} X {e.ClientY}";
    }
}