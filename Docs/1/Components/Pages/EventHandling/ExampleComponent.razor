@page "/EventHandling/Example"

<h3>@Heading</h3>

<button @onclick="@UpdateHeading">Update Heading</button>

@code {

    private string Heading { get; set; } = "My Heading";

    private void UpdateHeading(MouseEventArgs e)
    {
        Heading = "My New Heading";
        Console.WriteLine($"e: {e}");
    }

}

<input type="checkbox" @onchange="@CheckChanged" />

@code
{
    private void CheckChanged(ChangeEventArgs e)
    {
        Console.WriteLine($"CheckChanged: {e.Value}");
    }

}

